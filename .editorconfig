root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.build]
indent_style = tab

[*.csproj]
indent_style = space
indent_size = 2

[package.json]
indent_style = space
indent_size = 2
end_of_line = lf

# 140 chars line length for TS (same as ts-lint)
[**.ts]
max_line_length = 140
